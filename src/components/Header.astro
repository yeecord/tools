---
import { cn, containerStyle } from "@/utils/cn";
import { HeaderMenu } from "./HeaderMenu";
import { logo } from "@/utils/logo";
---

<div class="border-b border-border/30 w-full mb-8 sticky top-0 bg-background">
	<nav class={cn(containerStyle, "h-16 flex items-center z-50")}>
		<a href="/" class="flex items-center">
			<img
				alt="Yeecord"
				src={logo.src}
				width="128"
				height="128"
				class="w-8 rounded-full mr-2"
			/>
			<span class="font-bold">Yeecord 小工具</span>
		</a>
		<div class="flex-grow"></div>
		<HeaderMenu />
	</nav>
</div>
