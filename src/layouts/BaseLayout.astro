---
import Header from "@/components/Header.astro";
import logo from "@/assets/logo.png";
import { containerStyle } from "@/utils/cn";
import { getImage } from "astro:assets";
import { ImageMetadata } from "astro";
import { cn } from "../utils/cn";

interface Props {
	title: string;
	icon?: ImageMetadata;
}

const { title, icon } = Astro.props;

const suffix = "Yeecord 小工具";

const titleWithPrefix = title ? `${title} | ${suffix}` : suffix;

const iconUrl = (
	await getImage({
		src: icon || logo,
	})
).src;
---

<html lang="zh-Hant-Tw" class="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="icon" href={iconUrl} />
		<title>{titleWithPrefix}</title>
	</head>
	<body>
		<Header />
		<div class={cn(containerStyle, "mb-8 md:mb-4")}>
			<slot />
		</div>
	</body>
</html>
