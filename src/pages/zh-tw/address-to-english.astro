---
import Adsense from "../../components/adsense.astro";
import BaseLayout from "../../layouts/base-layout.astro";

export { getStaticPaths } from "../../utils/language";

import { Check } from "lucide-react";
import { AddressToEnglishInput } from "../../components/address-to-english-input";
---

<BaseLayout
  title="台灣郵政地址轉英文、地址英譯、地址中翻英（可批量、免驗證碼）"
  description="本機運行的地址中翻英服務。輸入臺灣郵政地址翻譯成英文格式，支援中文、全形數字轉換，可以一次輸入多行地址批量處理，方便填寫國際郵件，或是在網路上填寫地址時使用，翻譯都在本機上運作，確保隱私無疑慮"
>
  <main
    class="text-center min-h-[calc(100dvh-10rem)] md:min-h-[calc(100dvh-16rem)] flex sm:pt-12 flex-col"
  >
    <h1 class="text-3xl font-bold">
      台灣郵政地址轉英文、地址英譯、地址中翻英
    </h1>
    <p class="text-muted-foreground max-w-xl w-full text-pretty mx-auto">
      輸入臺灣郵政地址翻譯成英文，方便填寫國際郵件、網路上填寫地址時使用
    </p>
    <AddressToEnglishInput client:visible />
    <p class="text-sm text-muted-foreground">
      資料來源：中華郵政（縣市鄉鎮中英對照檔、中英文街路名稱對照檔、村里文字巷中英對照文字檔）
    </p>
    <div class="flex flex-wrap mx-auto py-4 gap-6 justify-center">
      <div class="flex gap-1">
        <Check className="text-green-500"/> 本機運行
      </div>
      <div class="flex gap-1">
        <Check className="text-green-500"/> 中英數字轉換
      </div>
      <div class="flex gap-1">
        <Check className="text-green-500"/> 批量翻譯
      </div>
    </div>
    <div class="grid md:grid-cols-2 gap-4">
      <Adsense />
      <Adsense />
    </div>
  </main>
</BaseLayout>
