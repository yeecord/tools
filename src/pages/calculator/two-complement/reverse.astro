---
import "@/styles/global.css";
import BaseLayout from "../../../layouts/base-layout.astro";
import { TwoComplementReverse } from "../../../components/two-complement-reverse";
import { Button } from "@/components/ui/button";
import { Sparkles } from "lucide-react";
---

<BaseLayout
  title="二的補數逆向計算機"
  description="簡易的八位元、十六位元等二補數逆向計算機"
>
  <h2>二的補數逆向計算機</h2>
  <p>簡易的八位元、十六位元等二補數逆向計算機</p>
  <TwoComplementReverse client:idle />
  <a class="mt-4 inline-block" href="/calculator/two-complement">
    <Button>
      <span class="mr-2">
        <Sparkles size="16" />
      </span>正向計算
    </Button>
  </a>
</BaseLayout>
